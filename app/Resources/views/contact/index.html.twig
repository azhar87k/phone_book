{% extends 'base.html.twig' %}
   {% block header %}
       <div class="header-right">
           <a class="active" href="{{ path('home') }} ">Home</a>
           <a href="{{ path('phone_book_contact_add') }}">Add Contact</a>
       </div>
   {% endblock %}
{% block content %}
    {% for msg in app.session.flashbag.get('notification-success') %}
        <div class="row" role="alert">
            <div class="alert alert-success col-sm-12">
                {{ msg | raw }}
            </div>
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-sm-12 content">
            <table class="table table-contact-list">
                <thead>
                <tr>
                    <th scope="col">Last Name</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Number</th>
                </tr>
                </thead>
                <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td>{{ contact.lastName }}</td>
                        <td>{{ contact.firstName }}</td>
                        <td>{{ contact.phoneType.type }}</td>
                        <td>{{ contact.number|phone_number_format('NATIONAL') }} </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

